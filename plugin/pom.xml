    <repositories>
        <repository>
            <id>dmulloy2-repo</id>
            <url>https://repo.dmulloy2.net/repository/public/</url>
        </repository>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/public/</url>
        </repository>
        <repository>
            <id>elmakers</id>
            <url>https://maven.elmakers.com/repository/</url>
        </repository>
    </repositories>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>

                            <relocations>
                                <relocation>
                                    <pattern>org.bstats</pattern>
                                    <shadedPattern>bwillows.shaded.bstats</shadedPattern>
                                </relocation>
                            </relocations>

                            <minimizeJar>false</minimizeJar>
                            <artifactSet>
                                <includes>
                                    <include>bwillows:common</include>
                                    <include>bwillows:v1_8_R3</include>
                                    <include>bwillows:v1_9_R1</include>
                                    <include>bwillows:v1_9_R2</include>
                                    <include>bwillows:v1_10_R1</include>
                                    <include>bwillows:v1_11_R1</include>
                                    <include>bwillows:v1_12_R1</include>
                                    <include>bwillows:v1_13_R2</include>
                                    <include>bwillows:v1_14_R1</include>
                                    <include>bwillows:v1_15_R1</include>
                                    <include>bwillows:v1_16_R3</include>
                                    <!--
                                    <include>bwillows:v1_17_R1</include>
