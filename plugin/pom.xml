                                    -->
                                    <include>com.comphenix.protocol:ProtocolLib</include>
                                    <include>org.bstats</include>
                                </includes>
                            </artifactSet>

                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
